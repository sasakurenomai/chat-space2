.side-contents
  .side-bar
    .side-bar__box
      %p.side-bar__box__username
        =  current_user.name
      %ul.side-bar__box__items
        %li.side-bar__box__edit
          =  link_to  new_group_path,  class:  'new'  do
            =  icon('fas',  'edit')
        %li.side-bar__box__new
          =  link_to  edit_user_path(current_user),  class:  'edit'  do
            =  icon('fas',  'cog')
          
  
  .side-groups
    -  current_user.groups.each do |group|
      .side-groups__group
        =  link_to  group_messages_path(group.id)  do
          %p.side-groups__group__name
            =  group.name
          %p.side-groups__group__message
            =  group.show_last_message

 







