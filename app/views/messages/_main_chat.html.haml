.chat-main
  .chat-main__header
    .chat-main__header__left-box
      %h2.chat-main__header__left-box__current-group
        =  @group.name
      %ul.chat-main__header__left-box__member-list
        Member : 
        - @group.users.each do |user|
          %li.chat-main__headerleft-box__member-list__member
            = "#{user.name}/"

        
    .chat-main__header__edit-btn 
      = link_to  edit_group_path(@group),  class:  'edit'  do
        Edit     
  
  
  .messages
    =  render @messages

 
  
  .form
    =  form_for  [@group, @message]  do  |f|
      .input-box
        =  f.text_field  :body,  class:  'input-box__text',  placeholder:  'type  a  message'
        =  f.label  :image,  class:  'input-box__image'  do
          =  icon('fas',  'image',  class:  'input-box__image__icon')
          =  f.file_field  :image,  class:  'input-box__image__file'
      .input
        =  f.submit  'Send',  class:  'submit-btn'  
      


